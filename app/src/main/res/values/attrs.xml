<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyTopbar">
        <attr name="myTitleText" format="string" />
        <attr name="myTitleTextSize" format="dimension" />
        <attr name="myTitleTextColor" format="color" />
        <attr name="myLeftTextColor" format="color" />
        <attr name="myLeftBackground" format="reference|color" />
        <attr name="myLeftText" format="string" />
        <attr name="myRightTextColor" format="color" />
        <attr name="myRightBackground" format="reference|color" />
        <attr name="myRightText" format="string" />
    </declare-styleable>
    <declare-styleable name="Topbar">
        <attr name="leftIcon" format="reference|color"/>
        <attr name="leftIconShow" format="boolean"/>

        <attr name="centerText" format="string"/>
        <attr name="centerTextSize" format="dimension"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="centerTextShow" format="boolean"/>

        <attr name="centerBackground" format="reference|color"/>
        <attr name="centerBackgroundShow" format="boolean"/>

        <attr name="rightIcon" format="reference|color"/>
        <attr name="rightIconShow" format="boolean"/>

        <attr name="rightIcon2" format="reference|color"/>
        <attr name="rightIcon2Show" format="boolean"/>

        <attr name="backgroundColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ColorBoard" >
        <attr name="colorPosition" >
            <flag name="center" value="0"></flag>
            <flag name="top" value="1"></flag>
            <flag name="down" value="2"></flag>
            <flag name="left" value="4"></flag>
            <flag name="right" value="8"></flag>
        </attr>
        <attr name="startLap" format="integer"></attr>
        <attr name="margin" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_max" format="integer"/>
        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_reached_color" format="color"/>
        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>
        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>
        <attr name="progress_text_offset" format="dimension"/>
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomRow">
        <attr name="background_color" format="color" />
        <attr name="line_color" format="color" />
        <attr name="img_detail_visible" format="boolean" />
        <attr name="title_text" format="string" />
        <attr name="title_width" format="integer" />
        <attr name="title_text_color" format="color" />
        <attr name="title_text_drawable" format="reference|integer" />
        <attr name="content_text" format="string" />
        <attr name="content_hint" format="string" />
        <attr name="content_text_color" format="color" />
        <attr name="content_drawable" format="reference|integer" />
        <attr name="content_enable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LineBreakLayout">
        <!--标签之间左右距离-->
        <attr name="leftAndRightSpace" format="dimension" />
        <!--标签行距-->
        <attr name="rowSpace" format="dimension" />
    </declare-styleable>
    <declare-styleable name="DashView">
        <attr name="dashWidth" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="dashOrientation" format="integer"/>
    </declare-styleable>
</resources>
