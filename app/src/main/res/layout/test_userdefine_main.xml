<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.applicationtest2.mvp.view.test.userDefine.MyTopbar
        android:id="@+id/test_userdefine_myTopBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        custom:myTitleText="主题"
        custom:myTitleTextSize="10sp"
        custom:myTitleTextColor="#000000"
        custom:myLeftText="返回"
        custom:myLeftTextColor="#000000"
        custom:myLeftBackground="#EBC700"
        custom:myRightText="更多"
        custom:myRightTextColor="#000000"
        custom:myRightBackground="#288BE1"
        ></com.example.administrator.applicationtest2.mvp.view.test.userDefine.MyTopbar>
    <com.example.administrator.applicationtest2.mvp.view.test.userDefine.TopBar
        android:layout_below="@+id/test_userdefine_myTopBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        custom:backgroundColor="@color/colorPrimary"
        custom:centerBackground="#666666"
        custom:centerText="二维码工具"
        custom:centerTextColor="@android:color/white"
        custom:centerTextShow="true"
        custom:leftIcon="@mipmap/titlebar_leftarrow_back"
        custom:rightIcon="@mipmap/ic_discuss"
        custom:rightIcon2="@mipmap/ic_discuss"
        custom:rightIconShow="true"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/test_userdefine_button1"
        android:layout_below="@+id/test_userdefine_myTopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="样式1"/>
    <Button
        android:id="@+id/test_userdefine_button2"
        android:layout_below="@+id/test_userdefine_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="样式2"/>
    <Button
        android:id="@+id/test_userdefine_button3"
        android:layout_below="@+id/test_userdefine_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="样式3"/>
    <Button
        android:id="@+id/test_userdefine_button4"
        android:layout_below="@+id/test_userdefine_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="样式4"/>
    <Button
        android:id="@+id/test_userdefine_button5"
        android:layout_below="@+id/test_userdefine_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="样式5"/>
</RelativeLayout>
